<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_home_imgBook"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover1" />

    <ImageView
        android:id="@+id/item_home_imgSell"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/item_home_imgExchange"
        app:layout_constraintStart_toEndOf="@+id/item_home_txtAuthor"
        app:layout_constraintTop_toBottomOf="@+id/item_home_txtBookName"
        app:srcCompat="@drawable/sell_color" />

    <TextView
        android:id="@+id/item_home_txtBookName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="The design of Everyday things"
        android:textColor="@color/logoColor2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/item_home_imgBook"
        app:layout_constraintStart_toStartOf="@+id/item_home_imgBook"
        app:layout_constraintTop_toBottomOf="@+id/item_home_imgBook" />

    <ImageView
        android:id="@+id/item_home_imgExchange"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/item_home_imgBook"
        app:layout_constraintTop_toBottomOf="@+id/item_home_txtBookName"
        app:srcCompat="@drawable/exchange_color" />

    <TextView
        android:id="@+id/item_home_txtAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="Don Normon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_home_imgSell"
        app:layout_constraintStart_toStartOf="@+id/item_home_txtBookName"
        app:layout_constraintTop_toBottomOf="@+id/item_home_txtBookName" />
</androidx.constraintlayout.widget.ConstraintLayout>