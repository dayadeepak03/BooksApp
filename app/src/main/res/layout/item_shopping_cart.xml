<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_shopping_cart_imgBook"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover1" />

    <TextView
        android:id="@+id/item_shopping_cart_txtBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="The Design of Everyday Things"
        android:textColor="@color/logoColor2"
        app:layout_constraintStart_toEndOf="@+id/item_shopping_cart_imgBook"
        app:layout_constraintTop_toTopOf="@+id/item_shopping_cart_imgBook" />

    <TextView
        android:id="@+id/item_shopping_cart_txtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Don Normon"
        app:layout_constraintStart_toEndOf="@+id/item_shopping_cart_imgBook"
        app:layout_constraintTop_toBottomOf="@+id/item_shopping_cart_txtBookName" />

    <TextView
        android:id="@+id/item_shopping_cart_txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="$12.75"
        app:layout_constraintStart_toEndOf="@+id/item_shopping_cart_imgBook"
        app:layout_constraintTop_toBottomOf="@+id/item_shopping_cart_txtAuthor" />

    <ImageView
        android:id="@+id/item_shopping_cart_imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_shopping_cart_imgBook" />
</androidx.constraintlayout.widget.ConstraintLayout>